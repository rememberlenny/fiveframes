

.full-frame-hero{
  position: relative;
  width: 100%;
  background-image: url("http://i.imgur.com/lvVFvJS.jpg");
  background-size: cover;
  background-position: center center;
}

.attribute-caption{
  position: absolute;
  bottom: 10px;
  right: 10px;
  font-size: 10px;
  font-weight: 500;
  .author-name{
    border-bottom: 1px dotted black;
  }
}

.text-silo{
  position: absolute;
  top: 30%;
  h1{
    font-weight: 100;
  }
  p{
    font-weight: 500;
  }
}

.dark-explaination{
  padding-top: 10%;
  padding-bottom: 10%;
  background: #202020;
  h2, p{
    font-weight: 100;
    color: #FFF;
  }
  p{
    margin-top: 100px;
  }
  .image-slide{
    width: 15%;
  }

  .type-out-message{
    background: #FFF;
    display: inline-block;
    padding: .8em 1.2em;
    border-radius: 5px;
    font-size: 1.3em;
  }
  .ghost-message{
    display: none;
  }
}

.hidden{
  opacity: 0.2;
}

.instructions-set{
  height: 200px;
  display: block;
}
